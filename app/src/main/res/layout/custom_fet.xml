        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="66dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
